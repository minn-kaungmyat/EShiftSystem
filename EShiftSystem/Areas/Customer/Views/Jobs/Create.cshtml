@model EShiftSystem.Models.Job

@{
    ViewData["Title"] = "Create Job";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Job</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="JobDate" class="control-label"></label>
                <input asp-for="JobDate" class="form-control" type="date" />
                <span asp-validation-for="JobDate" class="text-danger"></span>
            </div>

            <!-- If you want to later allow adding loads here, we’ll convert this to a view model -->

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyJobs">Back to My Jobs</a>
</div>
