@model EShiftSystem.Models.Load
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Load";
}

<h2>Add Load for Job #@Model.JobId</h2>

<form asp-action="AddLoad" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="form-group">
        <label asp-for="StartLocation"></label>
        <input asp-for="StartLocation" class="form-control" />
        <span asp-validation-for="StartLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TransportUnitId">Transport Unit</label>
        <select asp-for="TransportUnitId" class="form-control" asp-items="ViewBag.TransportUnits"></select>
        <span asp-validation-for="TransportUnitId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Another Load</button>
    <a asp-action="Review" asp-route-jobId="@Model.JobId" class="btn btn-primary ml-2">Next: Review Job</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
