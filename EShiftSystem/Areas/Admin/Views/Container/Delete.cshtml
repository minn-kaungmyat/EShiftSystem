@model EShiftSystem.Models.Container
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header"><h2>Delete Container</h2></div>

<div>
    <h4>Are you sure you want to delete this container?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ContainerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline">Cancel</a>
    </form>
</div>
