@model EShiftSystem.Models.Lorry
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header"><h2>Create Lorry</h2></div>

<form asp-action="Create" method="post">
    <div class="form-wrapper">
    <div class="form-group">
        <label asp-for="LicensePlate" class="control-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline">Cancel</a>
	</div>
</form>
