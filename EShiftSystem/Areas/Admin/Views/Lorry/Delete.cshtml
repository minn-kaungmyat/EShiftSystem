@model EShiftSystem.Models.Lorry

<h2>Delete Lorry</h2>

<div>
    <h4>Are you sure you want to delete this lorry?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="LorryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
