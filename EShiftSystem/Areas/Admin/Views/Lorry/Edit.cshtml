@model EShiftSystem.Models.Lorry
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header"><h2>Edit Lorry</h2></div>

<form asp-action="Edit" method="post">
    <div class="form-wrapper">
    <input type="hidden" asp-for="LorryId" />
    <div class="form-group">
        <label asp-for="LicensePlate"></label>
        <input asp-for="LicensePlate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline">Cancel</a>
	</div>
</form>
