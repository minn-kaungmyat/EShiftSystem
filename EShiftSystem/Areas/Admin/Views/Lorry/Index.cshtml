@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<EShiftSystem.Models.Lorry>

<h2>Lorries</h2>

<a class="btn btn-primary" asp-area="Admin" asp-controller="Lorry" asp-action="Create">Add New Lorry</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>License Plate</th>
            <th>Model</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LicensePlate</td>
                <td>@item.Model</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LorryId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.LorryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
