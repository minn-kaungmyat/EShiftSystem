@model EShiftSystem.Models.Driver
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header"><h2>Create Driver</h2></div>

<form asp-action="Create" method="post">
    <div class="form-wrapper">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="License" class="control-label"></label>
            <input asp-for="License" class="form-control" />
            <span asp-validation-for="License" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-outline">Cancel</a>
    </div>
</form>
