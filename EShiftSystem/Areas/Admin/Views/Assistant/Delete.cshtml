@model EShiftSystem.Models.Assistant
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header"><h2>Delete Assistant</h2></div>

<div>
    <h4>Are you sure you want to delete this assistant?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Transport Unit</dt>
        @* <dd class="col-sm-10">@Model.TransportUnit?.id</dd> *@
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AssistantId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline">Cancel</a>
    </form>
</div>
